# LLM Discussion Summarization Configuration
# Copy these to your .env file and fill in the values

# ============================================
# Gemini API Configuration (Required)
# ============================================
# Get API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Feature Control
# ============================================
LLM_SUMMARY_ENABLED=true
LLM_PROVIDER=gemini

# ============================================
# Discord Channel IDs
# ============================================
# Channel where admins review and approve summaries
# Right-click channel → Copy ID
LLM_ADMIN_APPROVAL_CHANNEL=1234567890

# Channel where final summaries are posted
# Right-click channel → Copy ID
LLM_SUMMARY_CHANNEL=0987654321

# ============================================
# Optional: Channel Whitelist
# ============================================
# Leave empty to process ALL channels
# Comma-separated list of channel IDs to process
# Example: LLM_CHANNEL_WHITELIST=channel_id_1,channel_id_2,channel_id_3
LLM_CHANNEL_WHITELIST=

# ============================================
# LLM Processing Settings
# ============================================
# Minimum number of messages before triggering LLM check
# Range: 5-20 recommended
LLM_MIN_MESSAGES=10

# Number of messages to look back and analyze
# Range: 50-200 recommended (higher = more context, slower)
LLM_LOOKBACK_WINDOW=100

